# アプリケーション設定
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Better Auth 設定
# 秘密鍵は以下のコマンドで生成: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-key-here

# kintone設定（開発環境）
KINTONE_BASE_URL=https://your-subdomain.cybozu.com
KINTONE_TALENT_APP_ID=your_app_id
KINTONE_TALENT_API_TOKEN=your_api_token
KINTONE_JOB_APP_ID=your_app_id
KINTONE_JOB_API_TOKEN=your_api_token
KINTONE_APPLICATION_APP_ID=your_app_id
KINTONE_APPLICATION_API_TOKEN=your_api_token
KINTONE_RECOMMENDATION_APP_ID=your_app_id
KINTONE_RECOMMENDATION_API_TOKEN=your_api_token

# メール送信設定（SendGrid）
# 開発環境ではコンソールに出力するため、ダミー値でOK
SENDGRID_API_KEY=SG_your_sendgrid_key

# Gemini AI 設定
# https://ai.google.dev から取得してください
GEMINI_API_KEY=your_gemini_api_key
